{
  "openapi": "3.2.0",
  "info": { "title": "Edge Cases API", "version": "1.0.0" },
  "paths": {
    "/items": {
      "get": {
        "operationId": "listItems",
        "x-tsgonest-controller": "ItemsController",
        "summary": "List all items",
        "description": "Returns a list of items with various filters",
        "parameters": [
          {
            "name": "X-Request-Id",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "X-Correlation-Id",
            "in": "header",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "enum": ["active", "archived"] }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Item" }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createItem",
        "x-tsgonest-controller": "ItemsController",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateItemDto" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Item" }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Item" }
              }
            }
          }
        }
      }
    },
    "/items/{id}/deprecate": {
      "post": {
        "operationId": "deprecateItem",
        "x-tsgonest-controller": "ItemsController",
        "summary": "Deprecate an item",
        "deprecated": true,
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Item" }
              }
            }
          }
        }
      }
    },
    "/items/validate": {
      "post": {
        "operationId": "validateItem",
        "x-tsgonest-controller": "ItemsController",
        "responses": {
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/items/{id}/preview": {
      "get": {
        "operationId": "previewItem",
        "x-tsgonest-controller": "ItemsController",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "HTML preview",
            "content": {
              "text/html": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/items/{id}/image": {
      "get": {
        "operationId": "getItemImage",
        "x-tsgonest-controller": "ItemsController",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Image file",
            "content": {
              "image/png": {
                "schema": { "type": "string", "format": "binary" }
              }
            }
          }
        }
      }
    },
    "/events/stream": {
      "get": {
        "operationId": "streamEvents",
        "x-tsgonest-controller": "ItemsController",
        "summary": "Stream item events",
        "responses": {
          "200": {
            "description": "Typed SSE stream",
            "content": {
              "text/event-stream": {
                "schema": { "type": "string" },
                "itemSchema": {
                  "type": "object",
                  "required": ["data"],
                  "properties": {
                    "data": {
                      "type": "string",
                      "contentMediaType": "application/json",
                      "contentSchema": { "$ref": "#/components/schemas/ItemEvent" }
                    },
                    "event": { "type": "string" },
                    "id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/items/search": {
      "get": {
        "operationId": "searchItems",
        "x-tsgonest-controller": "ItemsController",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Item" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "deprecated": { "type": "boolean" }
        }
      },
      "CreateItemDto": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" }
        }
      },
      "ItemEvent": {
        "type": "object",
        "required": ["type", "itemId"],
        "properties": {
          "type": { "type": "string", "enum": ["created", "updated", "deleted"] },
          "itemId": { "type": "string" }
        }
      }
    }
  }
}
